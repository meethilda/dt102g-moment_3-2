@model CdAppTwo.Models.Songs

@{
    ViewData["Title"] = "Redigera l√•t";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="SongName" class="control-label"></label>
                <input asp-for="SongName" class="form-control" />
                <span asp-validation-for="SongName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Playtime" class="control-label"></label>
                <input asp-for="Playtime" class="form-control" />
                <span asp-validation-for="Playtime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CdId" class="control-label"></label>
                <select asp-for="CdId" class="form-control" asp-items="ViewBag.CdTitle"></select>
                <span asp-validation-for="CdId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Cd" asp-action="Index">Tillbaka till samlingen</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
